---
const { title, subtitle, date } = Astro.props;
---

<div class="flex gap-4 pb-8">
  <!-- Timeline line and dot -->
  <div class="education__time flex flex-col items-center flex-shrink-0">
    <span class="w-3 h-3 bg-primary block rounded-full ring-4 ring-primary/20"></span>
    <span class="education__line bg-gradient-to-b from-primary/40 to-transparent block h-full w-[2px]"></span>
  </div>

  <!-- Content -->
  <div class="flex-grow pb-4">
    {date && (
      <span class="text-sm font-medium text-primary mb-2 block">{date}</span>
    )}
    <h3 class="font-heading text-xl font-semibold text-text-primary mb-1">{title}</h3>
    <span class="text-text-secondary text-sm block mb-3">{subtitle}</span>
    <div class="text-text-secondary leading-relaxed">
      <slot />
    </div>
  </div>
</div>
